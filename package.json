{
  "name": "devflow-intelligence",
  "version": "1.0.0",
  "description": "A comprehensive developer productivity dashboard that provides real-time insights into development workflows, team performance, and code quality metrics.",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:performance": "turbo run test:performance",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "backup:test": "node deployment/__tests__/dr-validation-simple.js",
    "backup:validate": "node deployment/__tests__/dr-comprehensive-validation.js",
    "backup:implementation-test": "node deployment/__tests__/dr-implementation-test.js",
    "dr:status": "node deployment/disaster-recovery/dr-cli.js status",
    "dr:backup": "node deployment/disaster-recovery/dr-cli.js backup",
    "dr:test": "node deployment/disaster-recovery/dr-cli.js test",
    "test:global": "node tests/final-application-test.js",
    "test:monitor": "node tests/final-application-test.js --continuous",
    "test:quiet": "node tests/final-application-test.js --quiet",
    "launch": "./launch-devflow.sh",
    "launch:monitor": "./launch-devflow.sh --health-interval 30",
    "prepare": "husky install",
    "postinstall": "turbo run build --filter=@devflow/shared-types",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@devflow/shared-types && changeset publish"
  },
  "keywords": [
    "developer-productivity",
    "dashboard",
    "analytics",
    "metrics",
    "code-quality",
    "team-performance",
    "devops",
    "monitoring",
    "typescript",
    "react",
    "nodejs",
    "microservices",
    "kubernetes",
    "disaster-recovery"
  ],
  "author": {
    "name": "DevFlow Team",
    "email": "team@devflow.com",
    "url": "https://github.com/bacoco/DevFlow"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bacoco/DevFlow.git"
  },
  "bugs": {
    "url": "https://github.com/bacoco/DevFlow/issues"
  },
  "homepage": "https://github.com/bacoco/DevFlow#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "extensions/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@aws-sdk/client-s3": "^3.454.0",
    "@influxdata/influxdb-client": "^1.33.2",
    "@kubernetes/client-node": "^0.20.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.3.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit && npm run type-check"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps",
      "<rootDir>/services",
      "<rootDir>/packages",
      "<rootDir>/deployment",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.{ts,tsx,js,jsx}",
      "**/*.test.{ts,tsx,js,jsx}"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb-typescript",
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "import/prefer-default-export": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "react/react-in-jsx-scope": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          "build/**",
          ".next/**"
        ]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": [
          "coverage/**"
        ]
      },
      "test:unit": {
        "dependsOn": [
          "build"
        ]
      },
      "test:integration": {
        "dependsOn": [
          "build"
        ]
      },
      "test:e2e": {
        "dependsOn": [
          "build"
        ]
      },
      "lint": {
        "outputs": []
      },
      "type-check": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "clean": {
        "cache": false
      }
    }
  },
  "volta": {
    "node": "18.18.0",
    "npm": "9.8.1"
  }
}